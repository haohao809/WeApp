<view class="detail-container">
	<image class="image-head" src="{{postData.headImgSrc}}"></image>
	<image class="auto" src="/images/music/music-stop.png"></image>
	<view class="author-date"> 
		<image class="avatar" src="{{postData.avatar}}"></image>
		<text class="author">{{postData.author}}</text>
		<text class="text">发表于</text>
		<text class="date">{{postData.dateTime}}</text>
	</view>
	<text class="title">{{postData.title}}</text>
	<view class="tool">
		<view class="circle-img">
			<image src="/images/icon/collection.png"></image>
			<image></image>
			<image class="share-image" src="/images/icon/share.png"></image>
		</view>
		<view class="line"></view>
	</view>
	<text class="detail">{{postData.detail}}</text>
</view>