.detail-container{
  display: flex;
  flex-direction: column;
}
.image-head{
  height: 460rpx;
  width: 100%
}
.auto{
  width: 102rpx;
  height: 110rpx;
  left: 50%;
  margin-left: -51rpx;
  position: absolute;
  top: 180rpx;
  opacity: 0.6;
}
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.text{
  font-size: 20rpx;
  color: #999;
  margin-left: 20rpx;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title{
  font-size: 36rpx;
  margin-left: 40rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width: 90rpx;
  height: 90rpx;
}
.share-image{
  margin-left: 30rpx;
}
.line{
  width: 660rpx;
  height: 1px;
  background: #e5e5e5;
  vertical-align: middle;
  margin: 0 auto;
  z-index: -99;
  position: relative;
  top: 46rpx;
}
.detail{
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}