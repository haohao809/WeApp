<!--pages/movies/movie-detail/movie-detail.wxml-->
	<view class="detail-container">
		<image class="head-img" src="{{movie.movieImg}}" mode="aspectFill"></image>
		<view class="head-imh-hover">
			<text class="title">{{movie.title}}</text>
			<text class="country">{{movie.country + "."+movie.year}}</text>
			<view class="like">
				<text class="highlight-font">
					{{movie.wishCount}}
				</text>
				<text class="plain-font">
					人喜欢
				</text>
				<text class="highlight-font">
					{{movie.commentCount}}
				</text>
				<text class="plain-font">
					条评论
				</text>
			</view>
			<image class="movie-img" src="{{movie.movieImg}}"></image>
			<view class="summary"></view>
			<view class="hr"></view>
			<view class="synopsis"></view>
			<view class="hr"></view>
			<view class="cast"></view>
		</view>
	</view>
