/* pages/movies/movie-detail/movie-detail.wxss */
.detail-container{
	display: flex;
	flex-direction: column;
}
.head-img{
	width: 100%;
	height: 320rpx;
	filter: blur(20px);
}
.head-img-hover{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 320rpx;
	display: flex;
	flex-direction: column;
}
.title{
	color: #FFFF;
	font-size:19px;
	font-weight: bold;
	margin-left: 40rpx;
	margin-top: 50rpx;
	letter-spacing: 2px;
}
.country{
	color: #FFFF;
	font-size:10px;
	margin-left: 40rpx;
	margin-top: 30rpx;
	letter-spacing: 2px;
}
.like{
	display: flex;
	flex-direction: row;
	margin-left: 40rpx;
	margin-top: 30rpx;
}
.highlight-font{
	color: red;
	font-size: 22rpx;
	margin-right:  10rpx;
}
.plain-font{
	color: #666;
	font-size: 22rpx;
	 margin-right: 30rpx;
}
.movie-img{
	width: 175rpx;
	height: 238rpx;
	float: right;
}
